 <!--emoticon.wxml-->
 <template name="emoticon">
    <scroll-view class="emoticon-wall" scroll-y="true" style="height:{{windowHeight}}px;"
        bindscrolltolower="eventBase" data-action="scrollTolower">
            <!--<view class="space-72"></view>-->
            <view class="emoticon">
            <view class="content">
                <block wx:for="{{emoticon}}" wx:for-item="emoticon"> 
                    <view class="member" >
                        <image wx:if="{{ emoticon.menu_type == 4 ? true :false}}" class="mark m" src="../../images/mp4.png"></image>
                        <image wx:if="{{ emoticon.menu_type == 1 ? true :false}}" class="mark m" src="../../images/gif.png"></image>

                        <!--<label wx:if="{{ emoticon.menu_type == 4 ? true :false}}" class="mark m">M</label>
                        <label wx:if="{{ emoticon.menu_type == 1 ? true :false}}" class="mark g">G</label>-->

                        <!--<label class="{{ emoticon.menu_type == 4 ? 'mark-m' :''}}">M</label>-->
                        <!--{ emoticon.menu_type == 4 ? 'border-m' :''}}  {{ emoticon.menu_type == 1 ? 'border-g' :''}} {{ emoticon.menu_type == 2 ? 'border-i' :''}} {{ emoticon.menu_type == 3 ? 'border-i' :''}} -->
                        <image class="image-5 {"  
                        src="{{emoticon.static_url}}" background-size="cover" 
                            catchtap="eventBase" data-action="onMenu"  mode="center"
                            data-id="{{emoticon.img_id}}" data-img_url="{{emoticon.thumbnail_url}}" data-category_id="{{emoticon.category_id}}" 
                            data-size="{{emoticon.size}}" data-static_url="{{emoticon.static_url}}"   data-yun_url="{{emoticon.yun_url}}" 
                            data-menu_type="{{emoticon.menu_type}}"  
                            ></image>
                    </view>
                </block>
            </view>
            <view class="space-120"></view>
        </view>
    </scroll-view>
</template>