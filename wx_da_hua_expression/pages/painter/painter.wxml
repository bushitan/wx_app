<view class="page"  >
    <!--正常接收英雄帖-->
    <view wx:if="{{gatherStatus == 1}}">
        <view class="head_info">
            <view class="head_logo">
                <image src="{{logo}}"></image>
                <view class="des">{{nickName}}</view>
            </view>
            <view class="head_logo">
                <view class="des">{{title}}</view>
            </view>
            <view class="head_logo">
                <image src="{{prizeUrl}}"></image>
                <view class="des">福↑利</view>
            </view>
        </view>

          <view class="weui-cells__title">好心人的反馈图</view>

        <view class="preview_img">
            <image src="{{uploadImgUrl}}" mode="aspectFit"  catchtap="localImgChoose"></image>
        </view>
        
        <view class="send_img">
            <button catchtap="sendHelp" type="primary" disabled="{{uploadImgUrl == ''?true:false }}" >发送图片，获得福利</button>
        </view>
        <view class="to_gather">
            <button catchtap="toGather" >我也发英雄帖</button>
        </view>
    </view>

    <!--上传完成-->
    <view wx:elif="{{gatherStatus == 2}}">
        <view class="head_info">
            <view class="head_logo">
                <image src="../../images/emoji_log.jpg"></image>
                <view class="des">{{nickName}}</view>
            </view>
            <view class="head_logo">
                <view class="des">谢谢老板，奖励图请笑纳</view>
            </view>
            <view class="head_logo">
                <image src="{{prizeUrl}}" catchtap="prizeSave"></image>
                <view class="des">奖↑励</view>
            </view>
        </view>
        <view class="weui-cells__title prize_des">点击图片预览，右上角"⋮"可保存本地</view>
        <view class="prize_img">
            <image src="{{prizeUrl}}" mode="aspectFit"  catchtap="prizeSave"></image>
        </view>
        
        <view class="to_gather">
            <button catchtap="toGather" >我也发英雄帖</button>
        </view>
    </view>
    
    <!--英雄帖关闭-->
    <view wx:else>
        <view class="head_close">
            <view class="head_logo">
                <image src="../../images/emoji_log.jpg"></image>
                <view class="des">{{nickName}}</view>
            </view>
        </view>
        <view class="weui-cells__title head_close_alert">英雄帖已经关闭</view>
        <view class="to_gather">
            <button catchtap="toGather" >我也发英雄帖</button>
        </view>
    </view>

</view>
<!--<view class="classname">如果房主关闭状态，直接提示</view>-->



