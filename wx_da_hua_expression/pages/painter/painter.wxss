.title{
    margin: 6px;
}
.title .complete{
    color: #09bb07;
    text-align: right;
    margin-right:4px;
}
.title .share{
    color: #888888;
    text-align: right;
    margin-right:4px;
}


.snatch{
    position: absolute;
    width: 60px;
    height: 60px;
    right:70px;
    top: 20px;
    color: #fff;
    font-size: 20px;
    line-height: 60px;
    text-align: center;
    border-radius: 50%;
    background-color: #e64340;
    z-index: 1000;
}

canvas.paper-background {
    background: white;
    box-shadow: 1px 1px 5px rgba(0, 0, 0, .3);
}
canvas.paper {
    position: absolute;
}


view.color-picker {
    position: absolute;
    bottom: 4rem;
    left: 1rem;
    right: 1rem;
    height: 2rem;
}

view.color-item {
    display: block;
    float: left;
    width: 1.8rem;
    height: 1.8rem;
    border-radius: 100%;
    border: 3px solid white;
    margin-right: 5px;
}

view.color-item.selected {
    border-color: black;
}

view.tool-picker {
    position: absolute;
    bottom: 1.5rem;
    left: 1rem;
    right: 1rem;
    height: 2rem;
}

view.tool-item {
    display: block;
    float: left;
    width: 1.8rem;
    height: 1.8rem;
    border-radius: 100%;
    border: 3px solid white;
    margin-right: 5px;
}

view.tool-item.selected {
    border-color: black;
}


.board {
    position: relative
}

.btn-share{
    position: absolute;
    bottom: 1.5rem;
    left: 1rem;
    right: 1rem;
    height: 2rem;
}



.canvas_tools{
    position: fixed;
    padding: auto;
    left: 0;
    bottom: 0px;
    width: 100%;
    height: 60px;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.box{
    width: 40px;
    height: 40px;
    margin: 2px 0;
    border-radius: 50%;
    background-color: rebeccapurple;
}
.box-large{
    width: 42px;
    height: 42px;
    line-height: 42px;
    color: #fff;
    margin: 3px 0;
    border-radius: 50%;
    background-color: rebeccapurple;
    text-align: center;
}

/* 1 颜色选择器*/
.box-color{
    background-color: #cc0033;
}

/* 2 画笔*/
.box-pencil{
    background-color: #0099cc;
    background-image: url(data:image/png;base64,) ;
    background-repeat:no-repeat;
    background-position: center;
}

/* 3 橡皮擦*/
.box-earse{
    background-color: #cccccc;
    background-image: url(data:image/png;base64,) ;
    background-repeat:no-repeat;
    background-position: center;
}
/* 4 重新加载*/
.box-reset{
    background-color: #09abb2;
}
/* 5 添加图片*/
.box-image{
    background-color: #023b22;
}
/* 6 完成*/
.box-complete{
    background-color: #09bb07;
}

