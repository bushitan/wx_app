view.color-picker {
    position: absolute;
    bottom: 60px;
    left: 1rem;
    right: 1rem;
    height: 2rem;
    
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    justify-content:center;
    height:96px;
    /*background-color: #888888;*/
    color: #ffffff;
    font-size: 14px;
}
.color-picker scroll-view{
    height:750rpx;
    white-space: nowrap; 
    display: flex;
    box-shadow: 2px 0  6px -4px rgba(255,255,255,1) ;
}

view.color-item {
    width: 32px;
    height: 32px;
    border-radius: 100%;
    border: 3px solid white;
    margin-right: 5px;
}

view.color-item.selected {
    border-color: black;
}




view.tool-picker {
    position: absolute;
    bottom: 1.5rem;
    left: 1rem;
    right: 1rem;
    height: 2rem;
}

view.tool-item {
    display: block;
    float: left;
    width: 1.8rem;
    height: 1.8rem;
    border-radius: 100%;
    border: 3px solid white;
    margin-right: 5px;
}

view.tool-item.selected {
    border-color: black;
}


.board {
    position: relative
}

.btn-share{
    position: absolute;
    bottom: 1.5rem;
    left: 1rem;
    right: 1rem;
    height: 2rem;
}



