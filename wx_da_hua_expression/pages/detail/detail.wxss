/*轮播图*/

swiper {
  height: 380rpx;
}

.slide-image {
  width: 750rpx;
  height: 450rpx;
}

.art__content {
  padding:20px 30rpx;
  font-size:14px;
}
.art__content .test{
  /*display:block; */
  text-indent:2em;
  overflow:hidden;
}

.art__image {
  /*height: 180px; */
