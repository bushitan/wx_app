<!--editor.wxml-->
<view class="container">
    <view class="editor-container">
        <title class="editor-word">文字</title>
        <!--<view class="topic-main">-->
        <image class="editor-word" src="{{png}}" mode="aspectFit" ></image>
        <image class="editor-word" src="{{gif}}" mode="aspectFit" ></image>
            <!--<image class="editor-word" src="{{background}}" mode="aspectFit" ></image>-->
            
        <!--</view>-->
    </view>
  

    <view class="editor-bg-container">
        <image class="editor-bg" src="{{background}}" mode="aspectFit" ></image>
    </view>

   

    <view>
        <view class="section section_gap">
            <text class="section__title">设置大小</text>
            <view class="body-view">
                <slider bindchange="size_sliderchange" show-value/>
            </view>
            </view>

            <view class="section section_gap">
            <text class="section__title">设置X坐标</text>
            <view class="body-view">
                <slider bindchange="x_sliderchange" min="0" max="300"  show-value/>
            </view>
            </view>

            <view class="section section_gap">
            <text class="section__title">设置Y坐标</text>
            <view class="body-view">
                <slider bindchange="y_sliderchange" min="0" max="300" show-value/>
            </view>
        </view>
    </view>

    <view class="editor-btn">
        <button class="" bindtap="editorCreate"> 一键生成 </button>
    </view>

    <view id="input_view" style="position:absolute;left:{{offsetLeft}};top:{{offsetTop}};" 
    catchtouchstart="touchstart" 
    catchtouchmove="touchmove"
    catchtouchend="touchend">
    <!--输入的字-->
        <input  id="myInput" bindchange="word_Change" value="{{word_mix}}"   />
    </view>
    <modal title="你的表情" class="modal" hidden="{{express_ModalHidden}}"
        confirm-text="一键分享" bindconfirm="modalShare"  
        cancel-text="重新编辑"  bindcancel="modalReEditor"
        >
        <view >
            <image class="modal-express" src="{{express_mix}}" mode="aspectFit" ></image>
        </view>
    </modal>

</view>