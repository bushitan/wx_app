<!--editor.wxml-->
<view class="container">
    <view class="bg-box">
        <view class="bg-box-img">
            <image class="bg-img" src="{{background}}" mode="aspectFit" ></image>
        </view>
    </view>
    
    <view class="tool">
        <view class="tool-left">
            
            <view class="layer-content-input">
                <switch class="layer-switch-input" checked bindchange="switch1Change" type="checkbox"/>
                <input class="layer-input-input" value="{{word_mix}}"   />
            </view>

            <view class="layer-content-input">
                <switch class="layer-switch-input" checked bindchange="switch1Change" type="checkbox"/>
                <input class="layer-input-input" value="{{word_mix}}"   />
            </view>
            <view class="layer-content">
                <switch class="layer-switch" checked bindchange="switch1Change" type="checkbox"/>
                <image class="layer-img" src="{{png}}" mode="aspectFit" ></image>
            </view>
            <view class="layer-content">
                <switch class="layer-switch" checked bindchange="switch1Change" type="checkbox"/>
                <image class="layer-img" src="{{gif}}" mode="aspectFit" ></image>
            </view>
        </view>
        <view class="tool-right">
            <view class="section section_gap">
                <text class="section_title">设置大小</text>
                <view class="body-view">
                    <slider bindchange="size_sliderchange" show-value/>
                </view>
                </view>

                <view class="section section_gap">
                <text class="section_title">设置X坐标</text>
                <view class="body-view">
                    <slider bindchange="x_sliderchange" min="0" max="500"  show-value/>
                </view>
                </view>
                <view class="section section_gap">
                <text class="section_title">设置Y坐标</text>
                <view class="body-view">
                    <slider bindchange="y_sliderchange" min="0" max="500" show-value/>
                </view>
            </view>
        </view>
    </view>
    <view class="editor-btn">
        <button class="" bindtap="editorCreate"> 一键生成 </button>
    </view>

    <view id="input_view" style="position:absolute;left:{{offsetLeft}};top:{{offsetTop}};" 
    catchtouchstart="touchstart" 
    catchtouchmove="touchmove"
    catchtouchend="touchend">
    <!--输入的字-->
        <input  id="myInput" bindchange="word_Change" value="{{word_mix}}"   />
    </view>
    <modal title="你的表情" class="modal" hidden="{{express_ModalHidden}}"
        confirm-text="一键分享" bindconfirm="modalShare"  
        cancel-text="重新编辑"  bindcancel="modalReEditor"
        >
        <view >
            <image class="modal-express" src="{{express_mix}}" mode="aspectFit" ></image>
        </view>
    </modal>

</view>