        <view class="weui-flex">
            <view class=""> 
                <view class="title">大小：</view>
            </view>    
            <view class="weui-flex__item"> 
                <slider bindchange="size_sliderchange" value="47" min="8" max="96" show-value/>
            </view>
        </view>
    </view>  

    <view class="weui-btn-area">
        <button class="weui-btn" type="primary"  bindtap="Create">预览（右上角分享）</button>
    </view>


    <view id="input_view" style="position:absolute;left:{{offsetLeft}};top:{{offsetTop}}; border:1px dashed white;" 
    catchtouchstart="touchstart" 
    catchtouchmove="touchmove"
    catchtouchend="touchend">
    <!--输入的字-->
        <view style="font-size:{{font_size}};color:{{color}}; ">{{word_mix}}</view>
        <!--<input  id="myInput" bindchange="word_Change" value="{{word_mix}}"   />-->
    </view>
</view>

    

<view class="container" hidden="true">
