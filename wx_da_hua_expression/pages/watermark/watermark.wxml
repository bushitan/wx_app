    <view class="tool-left">
        <!--<view class="layer-content-input">-->
            <input class="layer-input-input"  value="{{word_mix}}" bindinput="inputChange" auto-focus="true"  />
        <!--</view>-->
            
    </view>
    <view class="page__bd_spacing">
        <view class="weui-flex">
            <block wx:for-items="{{grids}}" wx:key="{{index}}">
                <view class="weui-flex__item {{ color == item ? 'select' : ''}}" catchtap="color_change" data-color="{{item}}">
                    <view class="color {{item}} "></view>
                </view>
            </block>
            
        </view>
    </view>
  

    <view class=" page__bd_spacing">
        <view class="weui-flex">
            <view class=""> 
                <view class="title">透明度：</view>
            </view>    
            <view class="weui-flex__item">  
                <slider bindchange="dissolve_sliderchange" value="90" min="10" max="100" show-value/>
            </view>
        </view>
        
        <!--<view class="weui-flex">
            <view class=""> 
