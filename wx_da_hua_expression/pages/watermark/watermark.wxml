    <view class="tool">
        <view class="tool-left">
            <!--<view class="layer-content-input">-->
                <input class="layer-input-input"  value="{{word_mix}}" bindinput="inputChange"  />
            <!--</view>-->
                
        </view>
        <view>
            <text class="section_title">文字颜色</text>
            <label class="color" style="background-color: white;" catchtap="color_change" data-color="white">#ffffff</label>
            <label class="color" style="background-color: black;" catchtap="color_change" data-color="black">#ffffff</label>
            <!--<label>背景颜色</label><label class="color">#ffffff</label>
            <label>背景透明度</label><text class="section_title">文字大小</text>-->
            <view class="body-view">
                 <text class="section_title">背景透明度</text>
                <slider bindchange="dissolve_sliderchange" value="90" min="10" max="100" show-value/>
            </view>
        </view>
        <view class="tool-right">
            <view class="section section_gap">
                <text class="section_title">文字大小</text>
                <view class="body-view">
                    <slider bindchange="size_sliderchange" value="47" min="8" max="96" show-value/>
                </view>
                </view>

                <view class="section section_gap">
                <text class="section_title">X坐标</text>
                <view class="body-view">
                    <slider bindchange="x_sliderchange" value="150" min="0" max="500"  show-value/>
                </view>
                </view>
                <view class="section section_gap">
                <text class="section_title">Y坐标</text>
                <view class="body-view">
                    <slider bindchange="y_sliderchange" value="150"  min="0" max="500" show-value/>
                </view>
            </view>
        </view>
    </view>
     
    
    <view class="editor-btn">
    <!--<button catchtap="editorSuccess">一键编辑 </button>-->
        <button class="" bindtap="Create"> 一键生成 </button>
    </view>

   
    <modal title="你的表情" class="modal" hidden="{{express_ModalHidden}}"
        confirm-text="收藏" bindconfirm="modalShare"  
        cancel-text="重新编辑"  bindcancel="modalReEditor"
        >
        <view >
            <image class="modal-express" src="{{express_mix}}" mode="aspectFit" ></image>
        </view>
    </modal>

