<!--category.wxml-->
<view class="page">
    <view class="page__hd">
        <view class="page__title">目录编辑</view>
        <view class="page__desc">增加、删除目录（需清除目录包含的图片）</view>
    </view>

    <view class="page__bd">
        <view class="weui-cells weui-cells_after-title">
            <block wx:for="{{category}}" wx:for-index="index" wx:for-item="item">
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__hd">
                        <view class="weui-label"  >
                            <icon class="weui-icon-checkbox_circle" type="cancel" size="23"
                            catchtap="deleteCategory" data-category_id="{{item.category_id}}" data-has_img="{{item.hasImg}}"></icon>   <!--删除目录按钮-->
                        </view>
                    </view>
                    <view class="weui-cell__bd">
                        <view class="weui-input" >{{item.name}}</view>   <!--已添加目录名称-->
                    </view>
                </view>
            </block>
            
            <!--可更改信息-->
            <view class="weui-cell weui-cell_input" wx:if ="{{isAdd}}" > 
                <view class="weui-cell__hd">
                    <view class="weui-label">
                        <icon class="weui-icon-checkbox_circle" type="cancel" size="23"
                        catchtap="addCategoryCancel"></icon>
                        <icon class="weui-icon-checkbox_circle" type="success_circle" size="23"
                        catchtap="addCategoryOK"></icon>
                    </view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="请输入目录名称" auto-focus bindblur="inputBlur"   value=""/>
                </view>
            </view>

            <view class="weui-cell weui-cell_link">
                <view class="weui-cell__bd" catchtap="addCategory"  wx:if ="{{!isAdd}}">添加更多</view>
            </view>
        </view>
    </view>
</view>



