<view class="page"  >
    <view class="start">
        <view wx:if="{{userStatus==0}}">loading</view>
        <view wx:elif="{{userStatus==1}}">
            <button catchtap="navigateToPainter">开始画</button>
        </view>
        <view wx:else>
            <button catchtap="navigateToPainter">继续画</button>
        </view>
    </view>
    
    <view class="order" catchtap="navigateToPlayer">
        <view>主题：我想要个霸气的表情，你能帮我画么？</view>
        <view>创立者：丰兄</view>
    </view>
</view>