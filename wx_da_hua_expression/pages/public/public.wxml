<!--public.wxml-->
<view class="container">
    <!--搜索栏-->
     <view class="search" >
        <view >
            <input class="input" 	placeholder="热图、丰兄" value="{{keyword}}"/>
            <image class="btn" src="../../images/ic_action_search.png" background-size="cover" catchtap="searchBtn" ></image>
        </view>
        
    </view>
    <!--短语快捷键-->
    <view class="shortcut">
        <view class="content" >
            <block wx:for="{{hotLabel}}">
                <view  index="{{index}}" id="{{item.id}}">
                    <view class="btn"><label class="label" 
                    catchtap="eventBase"  data-action="btnSearch"
                    data-keyword="{{item}}">{{item}}</label></view>
                </view>
            </block>
        </view>
    </view>
    <!--表情图-->
  <view class="emoticon">
      <view class="content">
        <block wx:for="{{hotest}}">
            <view class="member" >
                <image class="image-5" src="{{item}}" background-size="cover" 
                catchtap="eventBase" data-action="onMenu" data-imgurl="{{item}}"></image>
            </view>
        </block>
      </view>
  </view>
 
    <!--悬浮菜单-->
    <view class="menu"  style="left:{{menu_left}};top:{{menu_top}};" wx:if="{{isPreDisplay}}"  >
            <view class="top" catchtap="eventBase"  data-action="btnShare">分享</view>
            <view class="left" catchtap="eventBase"  data-action="btnCollect">收藏</view>
            <!--<view class="right" catchtap="menuJoinAdd">拼接</view>
            <view class="bottom" catchtap="menuDelete">删除</view>
            <view class="bottom-right" catchtap="menuJoinAdd">分类</view>
            <view class="bottom-left" catchtap="menuResize">裁剪</view>-->
    </view>
    <!--</view>-->
  <loading hidden="{{hidden}}">
    加载中...
  </loading>
</view>
