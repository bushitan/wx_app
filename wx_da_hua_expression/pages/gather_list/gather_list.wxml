<view class="page">
    <view class="page__hd">
        <view class="page__title">List</view>
        <view class="page__desc">发布一次英雄帖最高收获15张图，</view>
    </view>
    <view class="page__bd">
        <!--<view class="weui-cells__title">带说明的列表项</view>-->
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">头像</view>
                <view class="weui-cell__ft">说明文字</view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd">标题</view>
                <view class="weui-cell__ft">说明文字</view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd">奖励</view>
                <view class="weui-cell__ft">说明文字</view>
            </view>
           <view class="weui-cell">
                <view class="weui-cell__bd">开关</view>
                <view class="weui-cell__ft">
                    <switch type="switch" checked="{{isGatherOpen==true}}"   bindchange="gatherSwitchChange" />
                </view>
            </view>
        </view>
    </view>
    <view class="page__bd" >
        <button catchtap="back">确认返回</button>
    </view>
