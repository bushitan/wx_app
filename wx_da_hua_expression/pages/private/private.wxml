<view class="container"  catchtap="eventBase" data-action="all" >
   <!--表情图-->
<scroll-view scroll-y="true" style="height:{{windowHeight}}px;"
 bindscrolltolower="eventBase" data-action="scrollTolower">
    <view class="space-72"></view>
    <view class="emoticon">
      <view class="content">
        <!--<block wx:for="{{latest}}">
            <view class="member" >
                <image class="image-5" src="{{item}}" background-size="cover" 
                     catchtap="eventBase" data-action="onMenu" data-imgurl="{{item}}"></image>
            </view>
        </block>-->

        <block wx:for="{{emoticon}}" wx:for-item="emoticon"> 
            <view class="member" >
                <image class="image-5" src="{{emoticon.static_url}}" background-size="cover" 
                     catchtap="eventBase" data-action="onMenu" data-id="{{emoticon.id}}" data-img_url="{{emoticon.thumbnail_url}}"></image>
            </view>
        </block>
      </view>
    </view>
</scroll-view>

<!--<view class="container"   >-->
    <!--表情目录-->
    <view class="category">
        <view catchtap="eventBase"  data-action="selectAllCategory" data-select_id="{{category_default.id}}">
            <label  class=" {{selectCategory.id == category_default.id ? 'select' : ''}}">全部</label> 
        </view>
        <scroll-view  scroll-x="true" >
            <block wx:for="{{category}}" 
                wx:for-item="c_name">
                <label catchtap="eventBase"  data-action="selectCategory" data-select_id="{{c_name.category_id}}"
                 class="{{selectCategory.id == c_name.category_id ? 'select' : ''}}">{{c_name.name}}</label>
            </block>
            <label catchtap="eventBase"  data-action="navigateToCategory">+</label>
            <!--</view>-->
        </scroll-view>
    </view>

   
    <!--点击表情，弹出菜单-->
    <view class="menuv-v2 {{menuType}}" wx:if="{{displayMenu}}">
         <view><image src="{{selectEmoticon.img_url}}"></image></view>
         <view><button class="" type="primary"  catchtap="eventBase" data-action="menuShare"
            size="mini" >分享</button></view>
        <view class="content" ><label><button catchtap="eventBase" data-action="menuDelete"
            size="mini" >删除</button ></label>
            <label ><button  catchtap="eventBase" data-action="menuMoveCategory"
            size="mini" >分组</button ></label>
            <label ><button catchtap="eventBase" data-action="menuResizeV2"
            size="mini" >压缩</button ></label>
        </view>
    </view>

    <!--图片、视频上传-->
    <view class="upload">
        <image src="../../images/ic_action_add.png" background-size="cover" 
             catchtap="eventBase"  data-action="btnUploadV2"></image>
    </view>
 
