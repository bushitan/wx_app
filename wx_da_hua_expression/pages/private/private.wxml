            <view class="top"   catchtap="eventBase" data-action="menuShare">分享</view>
            <view class="left"  catchtap="eventBase" data-action="navigateToEditor" >水印</view>
            <view class="right"   catchtap="eventBase" data-action="menuJoinAdd">拼接</view>
            <view class="bottom" catchtap="eventBase" data-action="menuDelete">删除</view>
            <view class="bottom-right"   catchtap="eventBase" data-action="menuMoveCategory">分类</view>
            <view class="bottom-left"   catchtap="eventBase" data-action="menuResize">裁剪</view>
    </view>-->

  
  <loading hidden="{{hidden}}">
    加载中...
  </loading>
</view>


