/*上传图片、视频*/
.upload{
    position:absolute;
    width:72rpx;
    height:72rpx;
    bottom: 48rpx;
    right:48rpx;
    background-color: #03bd00;
    border-radius: 50%;
    /*box-shadow: 0px 3px 6px -2px rgba(0,0,0,0.3);*/
    box-shadow: 0px 2px 6px 1px rgba(0,0,0,0.2);

}

.upload image {
    width: 64rpx;
    height: 64rpx;
    margin-left: 5rpx;
    margin-top: 5rpx;
}


/*选择目录*/
.category{
    position:absolute;
    width:100%;
    height:72rpx;
    line-height:72rpx;
    background-color: #24292c;
    color: #ffffff;
    display: flex
}
.category view{
    width:100rpx;
    margin-left:75rpx;
}

.category scroll-view{
    width:500rpx;
    white-space: nowrap; 
    display: flex
}

.category .select{
    border-radius: 5rpx;
    border: 1px solid #ffffff;
}
.category label{
    padding-left: 12rpx;
    padding-right: 12rpx;
    padding-top: 6rpx;
    padding-bottom: 6rpx;
}